  "verses": [
    {
      "global_id": 6147,
      "surah": 100,
      "ayah": 1,
      "verse_key": "100:1",
      "text_ar": " وَٱلْعَـٰدِيَـٰتِ ضَبْحًا",
      "text_en_pickthall": "By the snorting courses,"
    },
    {
      "global_id": 6148,
      "surah": 100,
      "ayah": 2,
      "verse_key": "100:2",
      "text_ar": "فَٱلْمُورِيَـٰتِ قَدْحًا",
      "text_en_pickthall": "Striking sparks of fire"
    },
    {
      "global_id": 6149,
      "surah": 100,
      "ayah": 3,
      "verse_key": "100:3",
      "text_ar": "فَٱلْمُغِيرَٰتِ صُبْحًا",
      "text_en_pickthall": "And scouring to the raid at dawn,"
    },
    {
      "global_id": 6150,
      "surah": 100,
      "ayah": 4,
      "verse_key": "100:4",
      "text_ar": "فَأَثَرْنَ بِهِۦ نَقْعًا",
      "text_en_pickthall": "Then, therewith, with their trail of dust,"
    },
    {
      "global_id": 6151,
      "surah": 100,
      "ayah": 5,
      "verse_key": "100:5",
      "text_ar": "فَوَسَطْنَ بِهِۦ جَمْعًا",
      "text_en_pickthall": "Cleaving, as one, the centre (of the foe),"
    },
    {
      "global_id": 6152,
      "surah": 100,
      "ayah": 6,
      "verse_key": "100:6",
      "text_ar": "إِنَّ ٱلْإِنسَـٰنَ لِرَبِّهِۦ لَكَنُودٌ",
      "text_en_pickthall": "Lo! man is an ingrate unto his Lord"
    },
    {
      "global_id": 6153,
      "surah": 100,
      "ayah": 7,
      "verse_key": "100:7",
      "text_ar": "وَإِنَّهُۥ عَلَىٰ ذَٰلِكَ لَشَهِيدٌ",
      "text_en_pickthall": "And lo! he is a witness unto that;"
    },
    {
      "global_id": 6154,
      "surah": 100,
      "ayah": 8,
      "verse_key": "100:8",
      "text_ar": "وَإِنَّهُۥ لِحُبِّ ٱلْخَيْرِ لَشَدِيدٌ",
      "text_en_pickthall": "And lo! in the love of wealth he is violent."
    },
    {
      "global_id": 6155,
      "surah": 100,
      "ayah": 9,
      "verse_key": "100:9",
      "text_ar": "۞ أَفَلَا يَعْلَمُ إِذَا بُعْثِرَ مَا فِى ٱلْقُبُورِ",
      "text_en_pickthall": "Knoweth he not that, when the contents of the graves are poured forth"
    },
    {
      "global_id": 6156,
      "surah": 100,
      "ayah": 10,
      "verse_key": "100:10",
      "text_ar": "وَحُصِّلَ مَا فِى ٱلصُّدُورِ",
      "text_en_pickthall": "And the secrets of the breasts are made known,"
    },
    {
      "global_id": 6157,
      "surah": 100,
      "ayah": 11,
      "verse_key": "100:11",
      "text_ar": "إِنَّ رَبَّهُم بِهِمْ يَوْمَئِذٍ لَّخَبِيرٌۢ",
      "text_en_pickthall": "On that day will their Lord be perfectly informed concerning them."
    }
  ]
}

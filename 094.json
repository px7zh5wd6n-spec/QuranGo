  "verses": [
    {
      "global_id": 6091,
      "surah": 94,
      "ayah": 1,
      "verse_key": "94:1",
      "text_ar": " أَلَمْ نَشْرَحْ لَكَ صَدْرَكَ",
      "text_en_pickthall": "Have We not caused thy bosom to dilate,"
    },
    {
      "global_id": 6092,
      "surah": 94,
      "ayah": 2,
      "verse_key": "94:2",
      "text_ar": "وَوَضَعْنَا عَنكَ وِزْرَكَ",
      "text_en_pickthall": "And eased thee of the burden"
    },
    {
      "global_id": 6093,
      "surah": 94,
      "ayah": 3,
      "verse_key": "94:3",
      "text_ar": "ٱلَّذِىٓ أَنقَضَ ظَهْرَكَ",
      "text_en_pickthall": "Which weighed down thy back;"
    },
    {
      "global_id": 6094,
      "surah": 94,
      "ayah": 4,
      "verse_key": "94:4",
      "text_ar": "وَرَفَعْنَا لَكَ ذِكْرَكَ",
      "text_en_pickthall": "And exalted thy fame?"
    },
    {
      "global_id": 6095,
      "surah": 94,
      "ayah": 5,
      "verse_key": "94:5",
      "text_ar": "فَإِنَّ مَعَ ٱلْعُسْرِ يُسْرًا",
      "text_en_pickthall": "But lo! with hardship goeth ease,"
    },
    {
      "global_id": 6096,
      "surah": 94,
      "ayah": 6,
      "verse_key": "94:6",
      "text_ar": "إِنَّ مَعَ ٱلْعُسْرِ يُسْرًا",
      "text_en_pickthall": "Lo! with hardship goeth ease;"
    },
    {
      "global_id": 6097,
      "surah": 94,
      "ayah": 7,
      "verse_key": "94:7",
      "text_ar": "فَإِذَا فَرَغْتَ فَٱنصَبْ",
      "text_en_pickthall": "So when thou art relieved, still toil"
    },
    {
      "global_id": 6098,
      "surah": 94,
      "ayah": 8,
      "verse_key": "94:8",
      "text_ar": "وَإِلَىٰ رَبِّكَ فَٱرْغَب",
      "text_en_pickthall": "And strive to please thy Lord."
    }

      "ayah": 1,
      "verse_key": "107:1",
      "text_ar": " أَرَءَيْتَ ٱلَّذِى يُكَذِّبُ بِٱلدِّينِ",
      "text_en_pickthall": "Hast thou observed him who belieth religion?"
    },
    {
      "global_id": 6199,
      "surah": 107,
      "ayah": 2,
      "verse_key": "107:2",
      "text_ar": "فَذَٰلِكَ ٱلَّذِى يَدُعُّ ٱلْيَتِيمَ",
      "text_en_pickthall": "That is he who repelleth the orphan,"
    },
    {
      "global_id": 6200,
      "surah": 107,
      "ayah": 3,
      "verse_key": "107:3",
      "text_ar": "وَلَا يَحُضُّ عَلَىٰ طَعَامِ ٱلْمِسْكِينِ",
      "text_en_pickthall": "And urgeth not the feeding of the needy."
    },
    {
      "global_id": 6201,
      "surah": 107,
      "ayah": 4,
      "verse_key": "107:4",
      "text_ar": "فَوَيْلٌ لِّلْمُصَلِّينَ",
      "text_en_pickthall": "Ah, woe unto worshippers"
    },
    {
      "global_id": 6202,
      "surah": 107,
      "ayah": 5,
      "verse_key": "107:5",
      "text_ar": "ٱلَّذِينَ هُمْ عَن صَلَاتِهِمْ سَاهُونَ",
      "text_en_pickthall": "Who are heedless of their prayer;"
    },
    {
      "global_id": 6203,
      "surah": 107,
      "ayah": 6,
      "verse_key": "107:6",
      "text_ar": "ٱلَّذِينَ هُمْ يُرَآءُونَ",
      "text_en_pickthall": "Who would be seen (at worship)"
    },
    {
      "global_id": 6204,
      "surah": 107,
      "ayah": 7,
      "verse_key": "107:7",
      "text_ar": "وَيَمْنَعُونَ ٱلْمَاعُونَ",
      "text_en_pickthall": "Yet refuse small kindnesses!"
    }

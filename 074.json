    },
    {
      "global_id": 5540,
      "surah": 74,
      "ayah": 45,
      "verse_key": "74:45",
      "text_ar": "وَكُنَّا نَخُوضُ مَعَ ٱلْخَآئِضِينَ",
      "text_en_pickthall": "We used to wade (in vain dispute) with (all) waders,"
    },
    {
      "global_id": 5541,
      "surah": 74,
      "ayah": 46,
      "verse_key": "74:46",
      "text_ar": "وَكُنَّا نُكَذِّبُ بِيَوْمِ ٱلدِّينِ",

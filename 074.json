    {
      "global_id": 5542,
      "surah": 74,
      "ayah": 47,
      "verse_key": "74:47",
      "text_ar": "حَتَّىٰٓ أَتَىٰنَا ٱلْيَقِينُ",
      "text_en_pickthall": "Till the Inevitable came unto us."
    },
    {
      "global_id": 5543,
      "surah": 74,
      "ayah": 48,
      "verse_key": "74:48",
      "text_ar": "فَمَا تَنفَعُهُمْ شَفَـٰعَةُ ٱلشَّـٰفِعِينَ",
      "text_en_pickthall": "The mediation of no mediators will avail them then."
    },
    {
      "global_id": 5544,
      "surah": 74,
      "ayah": 49,
      "verse_key": "74:49",
      "text_ar": "فَمَا لَهُمْ عَنِ ٱلتَّذْكِرَةِ مُعْرِضِينَ",

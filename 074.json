      "global_id": 5531,
      "surah": 74,
      "ayah": 36,
      "verse_key": "74:36",
      "text_ar": "نَذِيرًا لِّلْبَشَرِ",
      "text_en_pickthall": "As a warning unto men,"
    },
    {
      "global_id": 5532,
      "surah": 74,
      "ayah": 37,
      "verse_key": "74:37",
      "text_ar": "لِمَن شَآءَ مِنكُمْ أَن يَتَقَدَّمَ أَوْ يَتَأَخَّرَ",

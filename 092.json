{
  "surah_number": 92,
  "name_en": "Al-Layl",
  "name_ar": "الليل",
  "verses_count": 21,
  "revelation_place": "makkah",
  "verses": [
    {
      "global_id": 6059,
      "surah": 92,
      "ayah": 1,
      "verse_key": "92:1",
      "text_ar": " وَٱلَّيْلِ إِذَا يَغْشَىٰ",
      "text_en_pickthall": "By the night enshrouding"
    },
    {
      "global_id": 6060,
      "surah": 92,
      "ayah": 2,
      "verse_key": "92:2",
      "text_ar": "وَٱلنَّهَارِ إِذَا تَجَلَّىٰ",
      "text_en_pickthall": "And the day resplendent"
    },
    {
      "global_id": 6061,
      "surah": 92,
      "ayah": 3,
      "verse_key": "92:3",
      "text_ar": "وَمَا خَلَقَ ٱلذَّكَرَ وَٱلْأُنثَىٰٓ",
      "text_en_pickthall": "And Him Who hath created male and female,"
    },
    {
      "global_id": 6062,
      "surah": 92,
      "ayah": 4,
      "verse_key": "92:4",
      "text_ar": "إِنَّ سَعْيَكُمْ لَشَتَّىٰ",
      "text_en_pickthall": "Lo! your effort is dispersed (toward divers ends)."
    },
    {
      "global_id": 6063,
      "surah": 92,
      "ayah": 5,
      "verse_key": "92:5",
      "text_ar": "فَأَمَّا مَنْ أَعْطَىٰ وَٱتَّقَىٰ",
      "text_en_pickthall": "As for him who giveth and is dutiful (toward Allah)"
    },
    {
      "global_id": 6064,
      "surah": 92,
      "ayah": 6,
      "verse_key": "92:6",
      "text_ar": "وَصَدَّقَ بِٱلْحُسْنَىٰ",
      "text_en_pickthall": "And believeth in goodness;"
    },
    {
      "global_id": 6065,
      "surah": 92,
      "ayah": 7,
      "verse_key": "92:7",
      "text_ar": "فَسَنُيَسِّرُهُۥ لِلْيُسْرَىٰ",
      "text_en_pickthall": "Surely We will ease his way unto the state of ease."
    },
    {
      "global_id": 6066,
      "surah": 92,
      "ayah": 8,
      "verse_key": "92:8",
      "text_ar": "وَأَمَّا مَنۢ بَخِلَ وَٱسْتَغْنَىٰ",
      "text_en_pickthall": "But as for him who hoardeth and deemeth himself independent,"
    },
    {
      "global_id": 6067,
      "surah": 92,
      "ayah": 9,
      "verse_key": "92:9",
      "text_ar": "وَكَذَّبَ بِٱلْحُسْنَىٰ",
      "text_en_pickthall": "And disbelieveth in goodness;"
    },
    {
      "global_id": 6068,
      "surah": 92,
      "ayah": 10,
      "verse_key": "92:10",
      "text_ar": "فَسَنُيَسِّرُهُۥ لِلْعُسْرَىٰ",
      "text_en_pickthall": "Surely We will ease his way unto adversity."
    },
    {
      "global_id": 6069,
      "surah": 92,
      "ayah": 11,
      "verse_key": "92:11",
      "text_ar": "وَمَا يُغْنِى عَنْهُ مَالُهُۥٓ إِذَا تَرَدَّىٰٓ",
      "text_en_pickthall": "His riches will not save him when he perisheth."
    },
    {
      "global_id": 6070,
      "surah": 92,
      "ayah": 12,
      "verse_key": "92:12",
      "text_ar": "إِنَّ عَلَيْنَا لَلْهُدَىٰ",
      "text_en_pickthall": "Lo! Ours it is (to give) the guidance"
    },
    {
      "global_id": 6071,
      "surah": 92,
      "ayah": 13,
      "verse_key": "92:13",
      "text_ar": "وَإِنَّ لَنَا لَلْـَٔاخِرَةَ وَٱلْأُولَىٰ",
      "text_en_pickthall": "And lo! unto Us belong the latter portion and the former."
    },
    {
      "global_id": 6072,
      "surah": 92,
      "ayah": 14,
      "verse_key": "92:14",
      "text_ar": "فَأَنذَرْتُكُمْ نَارًا تَلَظَّىٰ",
      "text_en_pickthall": "Therefor have I warned you of the flaming Fire"
    },
    {
      "global_id": 6073,
      "surah": 92,
      "ayah": 15,
      "verse_key": "92:15",
      "text_ar": "لَا يَصْلَىٰهَآ إِلَّا ٱلْأَشْقَى",
      "text_en_pickthall": "Which only the most wretched must endure,"
    },
    {
      "global_id": 6074,
      "surah": 92,
      "ayah": 16,
      "verse_key": "92:16",
      "text_ar": "ٱلَّذِى كَذَّبَ وَتَوَلَّىٰ",
      "text_en_pickthall": "He who denieth and turneth away."
    },
    {
      "global_id": 6075,
      "surah": 92,
      "ayah": 17,
      "verse_key": "92:17",
      "text_ar": "وَسَيُجَنَّبُهَا ٱلْأَتْقَى",
      "text_en_pickthall": "Far removed from it will be the righteous"
    },
    {
      "global_id": 6076,
      "surah": 92,
      "ayah": 18,
      "verse_key": "92:18",
      "text_ar": "ٱلَّذِى يُؤْتِى مَالَهُۥ يَتَزَكَّىٰ",
      "text_en_pickthall": "Who giveth his wealth that he may grow (in goodness)."
    },
    {
      "global_id": 6077,
      "surah": 92,
      "ayah": 19,
      "verse_key": "92:19",
      "text_ar": "وَمَا لِأَحَدٍ عِندَهُۥ مِن نِّعْمَةٍ تُجْزَىٰٓ",
      "text_en_pickthall": "And none hath with him any favour for reward,"
    },
    {
      "global_id": 6078,
      "surah": 92,
      "ayah": 20,
      "verse_key": "92:20",
      "text_ar": "إِلَّا ٱبْتِغَآءَ وَجْهِ رَبِّهِ ٱلْأَعْلَىٰ",
      "text_en_pickthall": "Except as seeking (to fulfil) the purpose of his Lord Most High."
    },
    {
      "global_id": 6079,
      "surah": 92,
      "ayah": 21,
      "verse_key": "92:21",
      "text_ar": "وَلَسَوْفَ يَرْضَىٰ",
      "text_en_pickthall": "He verily will be content."
    }
  ]
}

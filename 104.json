{
  "surah_number": 104,
  "name_en": "Al-Humazah",
  "name_ar": "الهمزة",
  "verses_count": 9,
  "revelation_place": "makkah",
  "verses": [
    {
      "global_id": 6180,
      "surah": 104,
      "ayah": 1,
      "verse_key": "104:1",
      "text_ar": " وَيْلٌ لِّكُلِّ هُمَزَةٍ لُّمَزَةٍ",
      "text_en_pickthall": "Woe unto every slandering traducer,"
    },
    {
      "global_id": 6181,
      "surah": 104,
      "ayah": 2,
      "verse_key": "104:2",
      "text_ar": "ٱلَّذِى جَمَعَ مَالًا وَعَدَّدَهُۥ",
      "text_en_pickthall": "Who hath gathered wealth (of this world) and arranged it."
    },
    {
      "global_id": 6182,
      "surah": 104,
      "ayah": 3,
      "verse_key": "104:3",
      "text_ar": "يَحْسَبُ أَنَّ مَالَهُۥٓ أَخْلَدَهُۥ",
      "text_en_pickthall": "He thinketh that his wealth will render him immortal."
    },
    {
      "global_id": 6183,
      "surah": 104,
      "ayah": 4,
      "verse_key": "104:4",
      "text_ar": "كَلَّا ۖ لَيُنۢبَذَنَّ فِى ٱلْحُطَمَةِ",
      "text_en_pickthall": "Nay, but verily he will be flung to the Consuming One."
    },
    {
      "global_id": 6184,
      "surah": 104,
      "ayah": 5,
      "verse_key": "104:5",
      "text_ar": "وَمَآ أَدْرَىٰكَ مَا ٱلْحُطَمَةُ",
      "text_en_pickthall": "Ah, what will convey unto thee what the Consuming One is!"
    },
    {
      "global_id": 6185,
      "surah": 104,
      "ayah": 6,
      "verse_key": "104:6",
      "text_ar": "نَارُ ٱللَّهِ ٱلْمُوقَدَةُ",
      "text_en_pickthall": "(It is) the fire of Allah, kindled,"
    },
    {
      "global_id": 6186,
      "surah": 104,
      "ayah": 7,
      "verse_key": "104:7",
      "text_ar": "ٱلَّتِى تَطَّلِعُ عَلَى ٱلْأَفْـِٔدَةِ",
      "text_en_pickthall": "Which leapeth up over the hearts (of men)."
    },
    {
      "global_id": 6187,
      "surah": 104,
      "ayah": 8,
      "verse_key": "104:8",
      "text_ar": "إِنَّهَا عَلَيْهِم مُّؤْصَدَةٌ",
      "text_en_pickthall": "Lo! it is closed in on them"
    },
    {
      "global_id": 6188,
      "surah": 104,
      "ayah": 9,
      "verse_key": "104:9",
      "text_ar": "فِى عَمَدٍ مُّمَدَّدَةٍۭ",
      "text_en_pickthall": "In outstretched columns."
    }
  ]
}
